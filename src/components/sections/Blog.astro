<section class="py-8 sm:py-12 md:py-16 lg:py-20">
  <div class="mx-auto max-w-[1920px] px-2 sm:px-3 lg:px-8">
    <div
      class="bg-[#562A0E] rounded-[16.24px] w-full py-8 sm:py-10 md:py-12 lg:py-16 px-6 sm:px-8 lg:px-12"
    >
      <div class="mx-auto">
        <h2
          class="text-4xl sm:text-5xl lg:text-6xl font-display mb-16 sm:mb-20 md:mb-24 text-[#F2F2F2] text-center"
        >
          The Art of Renovation
        </h2>
        <h3 class="text-3xl md:text-4xl font-display text-[#F2F2F2] text-center mb-16">
          Our Blog Stories
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1 -->
          <a
            href="#"
            class="block bg-white/20 border border-white/30 rounded-2xl p-4 transition-colors hover:bg-white group"
          >
            <div class="aspect-[1.44/1] mb-4">
              <img
                src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80"
                alt="Home renovation"
                class="w-full h-full object-cover rounded-lg"
              />
            </div>
            <div class="flex justify-between items-center">
              <h3
                class="text-white text-xl font-medium leading-tight pr-4 flex-1 group-hover:text-[#0D0D0D] transition-colors"
              >
                10 Budget-Friendly Home Renovation Ideas You Can't Miss
              </h3>
              <span
                class="bg-primary-600 min-w-[44px] w-[44px] h-[44px] flex-shrink-0 flex items-center justify-center rounded-xl group-hover:bg-primary-700 transition-colors"
              >
                <i class="fa-solid fa-arrow-right text-white text-lg"></i>
              </span>
            </div>
          </a>

          <!-- Card 2 -->
          <a
            href="#"
            class="block bg-white/20 border border-white/30 rounded-2xl p-4 transition-colors hover:bg-white group"
          >
            <div class="aspect-[1.44/1] mb-4">
              <img
                src="https://images.unsplash.com/photo-1600573472591-ee6b68d14c68?auto=format&fit=crop&w=800&q=80"
                alt="Flooring selection"
                class="w-full h-full object-cover rounded-lg"
              />
