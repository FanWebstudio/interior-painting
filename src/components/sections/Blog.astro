<section class="py-12 sm:py-16 md:py-20 lg:py-24">
  <div class="mx-auto max-w-[1920px] px-2 sm:px-3 lg:px-8">
    <div
      class="bg-[#562A0E] rounded-[16.24px] w-full py-8 sm:py-10 md:py-12 lg:py-16 px-6 sm:px-8 lg:px-12"
    >
      <div class="mx-auto">
        <h2
          class="text-4xl md:text-5xl font-display text-[#F2F2F2] text-center mb-8"
        >
          The Art of Renovation
        </h2>
        <h3
          class="text-3xl md:text-4xl font-display text-[#F2F2F2] text-center mb-16"
        >
          Our Blog Stories
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1 -->
          <div class="bg-white/20 border border-white/30 rounded-2xl p-4">
            <div class="aspect-[1.44/1] mb-4">
              <img
                src="https://images.unsplash.com/photo-1600585154340-be6161a0c?auto=format&fit=crop&w=800&q=80"
                alt="Home renovation"
                class="w-full h-full object-cover rounded-lg"
              />
            </div>
            <div class="flex justify-between items-center">
              <h3 class="text-white text-xl font-medium leading-tight pr-4 flex-1">
                10 Budget-Friendly Home Renovation Ideas You Can't Miss
              </h3>
              <a
                href="#"
                class="bg-primary-600 min-w-[44px] w-[44px] h-[44px] flex-shrink-0 flex items-center justify-center rounded-xl hover:bg-primary-700 transition-colors"
              >
                <i class="fa-solid fa-arrow-right text-white text-lg"></i>
              </a>
            </div>
          </div>

          <!-- Card 2 -->
          <div class="bg-white rounded-2xl p-4">
            <div class="aspect-[1.44/1] mb-4">
              <img
                src="https://images.unsplash.com/photo-1600573472591-ee6b68d14c68?auto=format&fit=crop&w=800&q=80"
                alt="Flooring selection"
                class="w-full h-full object-cover rounded-lg"
              />
            </div>
            <div class="flex justify-between items-center">
              <h3 class="text-[#0D0D0D] text-xl font-medium leading-tight pr-4 flex-1">
                The Ultimate Guide to Choosing the Perfect Flooring for Your
                Home
              </h3>
              <a
                href="#"
                class="bg-primary-600 min-w-[44px] w-[44px] h-[44px] flex-shrink-0 flex items-center justify-center rounded-xl hover:bg-primary-700 transition-colors"
              >
                <i class="fa-solid fa-arrow-right text-white text-lg"></i>
              </a>
            </div>
          </div>

          <!-- Card 3 -->
          <div class="bg-white/20 border border-white/30 rounded-2xl p-4">
            <div class="aspect-[1.44/1] mb-4">
              <img
                src="https://images.unsplash.com/photo-1600566752355-35792bedcfea?auto=format&fit=crop&w=800&q=80"
                alt="Modern bathroom"
                class="w-full h-full object-cover rounded-lg"
              />
            </div>
            <div class="flex justify-between items-center">
              <h3 class="text-white text-xl font-medium leading-tight pr-4 flex-1">
                The Dos and Don'ts of Bathroom Remodeling: Expert Tips
              </h3>
              <a
                href="#"
                class="bg-primary-600 min-w-[44px] w-[44px] h-[44px] flex-shrink-0 flex items-center justify-center rounded-xl hover:bg-primary-700 transition-colors"
              >
                <i class="fa-solid fa-arrow-right text-white text-lg"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
