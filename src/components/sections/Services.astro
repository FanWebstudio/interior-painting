---
import Icon from '../ui/Icon.astro';

const services = [
  {
    title: 'Interior Renovation',
    image: 'https://images.unsplash.com/photo-1600607687920-4e2a09cf159d',
    icon: 'paint'
  },
  {
    title: 'Bathroom Remodeling',
    image: 'https://images.unsplash.com/photo-1620626011761-996317b8d101',
    icon: 'brush'
  },
  {
    title: 'Kitchen Renovation',
    image: 'https://images.unsplash.com/photo-1556911220-bff31c812dba',
    icon: 'home'
  },
  {
    title: 'Exterior Painting',
    image: 'https://images.unsplash.com/photo-1560518883-ce09059eeffa',
    icon: 'format-paint'
  },
  {
    title: 'Custom Carpentry',
    image: 'https://images.unsplash.com/photo-1572883454114-1cf0031ede2a',
    icon: 'hammer-wrench'
  },
  {
    title: 'Color Consultation',
    image: 'https://images.unsplash.com/photo-1589939705384-5185137a7f0f',
    icon: 'palette'
  },
  {
    title: 'Commercial Painting',
    image: 'https://images.unsplash.com/photo-1517581177682-a085bb7ffb15',
    icon: 'paint'
  },
  {
    title: 'Residential Painting',
    image: 'https://images.unsplash.com/photo-1513694203232-719a280e022f',
    icon: 'home-modern'
  }
];
---

<section class="py-8 sm:py-12 md:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-center text-4xl sm:text-5xl lg:text-6xl font-display mb-16 sm:mb-20 md:mb-24">
      Browse Our Range of<br />Renovation Solutions
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.slice(0, 4).map(({ title, image, icon }) => (
        <a
          href="#"
          class="group bg-gray-100 hover:bg-[#562A0E] hover:text-white rounded-2xl p-4 transition-all hover:scale-[1.02]"
        >
          <div class="aspect-[1.02/1] mb-4">
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover rounded-lg"
            />
          </div>
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-medium">{title}</h3>
            <div class="bg-[#F77F00] p-2 rounded-lg">
              <Icon 
                name={icon} 
                pack="mdi" 
                size={24} 
                class="text-white" 
                title={`${title} icon`}
              />
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-6">
      {services.slice(4).map(({ title, image, icon }) => (
        <a
          href="#"
          class="group bg-gray-100 hover:bg-[#562A0E] hover:text-white rounded-2xl p-4 transition-all hover:scale-[1.02]"
        >
          <div class="aspect-[1.02/1] mb-4">
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover rounded-lg"
            />
          </div>
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-medium">{title}</h3>
            <div class="bg-[#F77F00] p-2 rounded-lg">
              <Icon 
                name={icon} 
                pack="mdi" 
                size={24} 
                class="text-white" 
                title={`${title} icon`}
              />
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
