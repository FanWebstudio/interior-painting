<section
  class="py-8 px-4 sm:py-10 sm:px-6 md:py-12 lg:py-16 lg:px-8"
>
  <div
    class="max-w-7xl mx-auto flex flex-col gap-6 lg:flex-row lg:gap-12"
  >
    <!-- Left Section (Video) -->
    <div class="relative w-full lg:w-1/2">
      <img
        src="https://images.unsplash.com/photo-1562259949-e8e7689d7828"
        alt="Interior painting in progress"
        class="h-[300px] w-full rounded-2xl object-cover sm:h-[400px] md:h-[450px] lg:h-[500px]"
      />
      <div class="absolute inset-0 flex items-center justify-center">
        <button
          class="rounded-full bg-[#F77F00] p-4 text-white hover:bg-[#F77F00]/90"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-12 w-12"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M8 5v14l11-7z"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Right Section (Content) -->
    <div
      class="mt-8 flex w-full flex-col justify-center space-y-8 lg:mt-0 lg:w-1/2 lg:space-y-12"
    >
      <div class="space-y-4">
        <h2 class="text-3xl font-bold sm:text-4xl lg:text-5xl">
          We're Professional Interior Painters
        </h2>
        <p class="text-base text-gray-600 sm:text-lg">
          With over 10 years of experience, we deliver exceptional painting
          services that transform your space into a masterpiece. Our team of
          skilled professionals ensures quality workmanship and attention to
          detail.
        </p>
      </div>

      <div class="space-y-6">
        <!-- Feature 1 -->
        <div class="flex items-start space-x-4">
          <div class="rounded-lg bg-[#F77F00]/10 p-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-[#F77F00]"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="space-y-1">
            <h3 class="font-semibold">Quality Guaranteed</h3>
            <p class="text-sm text-gray-600">
              We stand behind our work with a satisfaction guarantee
            </p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="flex items-start space-x-4">
          <div class="rounded-lg bg-[#F77F00]/10 p-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-[#F77F00]"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="space-y-1">
            <h3 class="font-semibold">On-Time Completion</h3>
            <p class="text-sm text-gray-600">
              We respect your time and complete projects as scheduled
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
