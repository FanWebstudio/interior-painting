<section class="py-8 sm:py-12 md:py-16 lg:py-20">
  <div class="mx-auto max-w-[1920px] px-2 sm:px-3 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {/* Left Image */}
      <div class="w-full rounded-2xl overflow-hidden">
        <img
          src="https://images.unsplash.com/photo-1562259949-e8e7689d7828?auto=format&fit=crop&w=800&q=80"
          alt="Interior painting in progress"
          class="w-full h-full object-cover aspect-[1.1/1]"
        />
      </div>

      {/* Right Content */}
      <div class="w-full bg-[#F3752B] rounded-2xl p-8 lg:p-20 flex flex-col justify-center">
        <div class="max-w-[527px]">
          {/* Title Section */}
          <div class="space-y-6 mb-14">
            <div class="space-y-6">
              <h3 class="text-2xl sm:text-3xl text-white font-normal">
                Discover Your Dream Home.
              </h3>
              <h2 class="text-4xl sm:text-5xl lg:text-6xl font-display text-white">
                Let's Make It Happen!
              </h2>
            </div>
            <p class="text-[#F2F2F2] text-lg leading-relaxed">
              Ready to tackle your plumbing issues? Contact us now for fast,
              reliable service from our expert team!
            </p>
          </div>

          {/* Button */}
          <a
            href="#"
            class="inline-flex items-center gap-2 px-6 py-4 bg-[#562A0E] text-white rounded-xl hover:bg-[#3E1E0A] transition-colors"
          >
            <span class="text-lg font-medium">Let's Dive In</span>
            <i class="fa-solid fa-arrow-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
