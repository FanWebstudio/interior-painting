<section class="py-16 md:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-center text-4xl sm:text-5xl lg:text-6xl font-display mb-16 sm:mb-20 md:mb-24">
      Witness the Transformation
    </h2>

    <div class="relative">
      <!-- Image Slider -->
      <div class="overflow-hidden rounded-2xl">
        <div id="slider" class="flex transition-transform duration-300 ease-in-out">
          <div class="min-w-full">
            <img 
              src="https://images.unsplash.com/photo-1600585152220-90363fe7e115?auto=format&fit=crop&w=1800&q=80" 
              alt="Interior painting transformation - Bright modern living room" 
              class="w-full h-[650px] object-cover rounded-2xl"
            >
          </div>
          <div class="min-w-full">
            <img 
              src="https://images.unsplash.com/photo-1600566753376-12c8ab7fb75b?auto=format&fit=crop&w=1800&q=80" 
              alt="Interior painting transformation - Contemporary bedroom design" 
              class="w-full h-[650px] object-cover rounded-2xl"
            >
          </div>
        </div>
      </div>

      <!-- Navigation Buttons -->
      <button 
        id="prevBtn"
        class="absolute left-6 top-1/2 -translate-y-1/2 bg-primary-600 w-[40px] h-[40px] rounded-lg flex items-center justify-center text-white hover:bg-primary-700 transition-colors"
        aria-label="Previous image"
      >
        <i class="fa-solid fa-chevron-left"></i>
      </button>

      <button 
        id="nextBtn"
        class="absolute right-6 top-1/2 -translate-y-1/2 bg-primary-600 w-[40px] h-[40px] rounded-lg flex items-center justify-center text-white hover:bg-primary-700 transition-colors"
        aria-label="Next image"
      >
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>
  </div>
</section>

<script>
  const slider = document.getElementById('slider');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  let currentSlide = 0;
  const totalSlides = 2;

  function updateSlider() {
    if (slider) {
      slider.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
  }

  prevBtn?.addEventListener('click', () => {
    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    updateSlider();
  });

  nextBtn?.addEventListener('click', () => {
    currentSlide = (currentSlide + 1) % totalSlides;
    updateSlider();
  });
</script>
