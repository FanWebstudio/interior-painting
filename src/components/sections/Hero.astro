---
import Button from "../ui/Button.astro";
import Container from "../ui/Container.astro";
---

<div class="flex min-h-screen gap-8">
  <!-- Left Section -->
  <div class="relative w-1/2 rounded-[16.24px] bg-[#562A0E] p-24">
    <div class="flex h-full flex-col justify-center space-y-28">
      <!-- Title and Description -->
      <div class="space-y-6">
        <h1 class="text-6xl font-bold leading-tight text-white">
          Crafting Your<br />
          Perfect Living<br />
          Environment
        </h1>
        <p class="text-lg text-white/90">
          we take pride in our attention to detail and commitment to<br />
          customer satisfaction. Whether you require regular maintenance.
        </p>
      </div>

      <!-- CTA Button -->
      <div>
        <Button
          variant="primary"
          href="#contact"
          class="bg-[#F77F00] px-6 py-4 text-lg"
        >
          Contact Us Now
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ml-2 h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </Button>
      </div>

      <!-- Trusted Clients -->
      <div class="space-y-4">
        <p class="text-white/90">Trusted Top Client</p>
        <div class="flex items-center gap-12">
          <i class="fa-solid fa-building text-3xl text-white/80"></i>
          <i class="fa-solid fa-chart-pie text-3xl text-white/80"></i>
          <i class="fa-solid fa-briefcase text-3xl text-white/80"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Section -->
  <div class="relative w-1/2 overflow-hidden rounded-[16.24px]">
    <img
      src="https://images.unsplash.com/photo-1562259949-e8e7689d7828?auto=format&fit=crop&q=80"
      alt="Professional painter working on interior wall"
      class="h-full w-full object-cover"
    />
  </div>
</div>
