---
import Button from "../ui/Button.astro";
import Container from "../ui/Container.astro";
---

<div>
  <div
    class="mx-auto flex max-w-[1920px] flex-col gap-6 px-2 py-8 sm:px-3 sm:py-10 md:gap-8 md:py-12 lg:flex-row lg:px-8 lg:py-16"
  >
    <!-- Left Section -->
    <div
      class="relative w-full rounded-2xl bg-[#562A0E] px-6 py-8 sm:px-8 sm:py-10 lg:w-1/2 lg:px-12 lg:py-12"
    >
      <div
        class="flex h-full flex-col justify-center space-y-8 md:space-y-10 lg:space-y-12"
      >
        <!-- Hero Content -->
        <div class="space-y-4 md:space-y-6">
          <h1
            class="text-3xl font-bold text-white sm:text-4xl md:text-5xl lg:text-6xl"
          >
            Transform Your Space with Professional Interior Painting
          </h1>
          <p class="text-base text-white/90 sm:text-lg md:text-xl">
            Expert painters delivering exceptional results for your home or
            business
          </p>
        </div>

        <!-- CTA Button -->
        <div>
          <Button
            variant="primary"
            href="#contact"
            class="w-full bg-[#F77F00] px-4 py-3 text-base sm:text-lg md:w-auto md:px-6 md:py-4"
          >
            Contact Us Now
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="ml-2 h-5 w-5 md:h-6 md:w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </Button>
        </div>

        <!-- Trusted Clients -->
        <div class="space-y-3 md:space-y-4">
          <p class="text-sm text-white/90 sm:text-base md:text-lg">
            Trusted Top Client
          </p>
          <div
            class="flex items-center justify-center gap-6 sm:gap-8 md:gap-10 lg:justify-start lg:gap-12"
          >
            <i
              class="fa-solid fa-building text-lg text-white/80 sm:text-xl md:text-2xl lg:text-3xl"
            ></i>
            <i
              class="fa-solid fa-chart-pie text-lg text-white/80 sm:text-xl md:text-2xl lg:text-3xl"
            ></i>
            <i
              class="fa-solid fa-briefcase text-lg text-white/80 sm:text-xl md:text-2xl lg:text-3xl"
            ></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Section -->
    <div class="w-full lg:w-1/2">
      <img
        src="https://images.unsplash.com/photo-1562259949-e8e7689d7828?auto=format&fit=crop&q=80"
        alt="Professional painter working on interior wall"
        class="h-[400px] w-full rounded-2xl object-cover sm:h-[500px] md:h-[600px] lg:h-full"
      />
    </div>
  </div>
</div>
