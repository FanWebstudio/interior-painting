---
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';
import Image from '../ui/Image.astro';
---

<section class="pt-2 pb-8 sm:pt-3 sm:pb-12 md:pt-4 md:pb-16 lg:pt-6 lg:pb-20">
  <div class="mx-auto flex max-w-[1920px] flex-col gap-6 px-2 sm:px-3 md:gap-8 lg:flex-row lg:px-8">
    <!-- Left Section -->
    <div
      class="relative w-full rounded-2xl bg-[#562A0E] px-6 py-16 sm:px-8 sm:py-20 lg:w-1/2 lg:px-12 lg:py-24"
    >
      <div class="flex h-full flex-col justify-center space-y-8 md:space-y-10 lg:space-y-12">
        <!-- Hero Content -->
        <div class="space-y-4 md:space-y-6">
          <h1 class="text-3xl font-bold text-white sm:text-4xl md:text-5xl lg:text-6xl">
            Expert Interior Painting Solutions for Your Home or Business
          </h1>
          <p class="text-base text-white/90 sm:text-lg md:text-xl">
            Delivering exceptional results with professionalism and care
          </p>
        </div>

        <!-- CTA Button -->
        <div>
          <Button
            variant="primary"
            href="#contact"
            class="w-full bg-[#F77F00] px-4 py-3 text-base sm:text-lg md:w-auto md:px-6 md:py-4"
          >
            Contact Us Now
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="ml-2 h-5 w-5 md:h-6 md:w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </Button>
        </div>

        <!-- Trusted Clients -->
        <div class="space-y-3 md:space-y-4">
          <p class="text-sm text-white/90 sm:text-base md:text-lg">Trusted by Industry Leaders</p>
          <div
            class="flex items-center justify-center gap-6 sm:gap-10 md:gap-12 lg:justify-start lg:gap-16"
          >
            <div class="w-[80px] sm:w-[120px] md:w-[140px] lg:w-[160px]">
              <Image
                src="/images/logos/slack.png"
                alt="Slack"
                class="w-full opacity-90 hover:opacity-100 transition-opacity"
                width={160}
                height={40}
                format="avif"
              />
            </div>
            <div class="w-[80px] sm:w-[120px] md:w-[140px] lg:w-[160px]">
              <Image
                src="/images/logos/spotify.png"
                alt="Spotify"
                class="w-full opacity-90 hover:opacity-100 transition-opacity"
                width={160}
                height={48}
                format="avif"
              />
            </div>
            <div class="w-[80px] sm:w-[120px] md:w-[140px] lg:w-[160px]">
              <Image
                src="/images/logos/coinbase.png"
                alt="Coinbase"
                class="w-full opacity-90 hover:opacity-100 transition-opacity"
                width={160}
                height={36}
                format="avif"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Section -->
    <div class="w-full lg:w-1/2">
      <div class="relative h-[500px] sm:h-[600px] md:h-[700px] lg:h-[800px]">
        <!-- Loading placeholder -->
        <div class="absolute inset-0 bg-gray-200 rounded-2xl animate-pulse"></div>

        <Image
          src="https://images.unsplash.com/photo-1562259949-e8e7689d7828?auto=format&fit=crop&q=80"
          alt="Professional painter working on interior wall"
          class="absolute inset-0 w-full h-full rounded-2xl object-cover"
          width={1200}
          height={800}
          sizes="(min-width: 1024px) 50vw, 100vw"
          format="avif"
          quality={90}
        />
      </div>
    </div>
  </div>
</section>
