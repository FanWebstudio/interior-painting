---
import Button from "../ui/Button.astro";
import Container from "../ui/Container.astro";
---

<div class="flex min-h-screen flex-col gap-6 px-6 md:gap-8 md:px-8 lg:flex-row">
  <!-- Left Section -->
  <div class="relative w-full rounded-[16.24px] bg-[#562A0E] px-6 md:px-8 lg:w-1/2 lg:px-16">
    <div class="flex h-full flex-col justify-center space-y-8 md:space-y-12 lg:space-y-16">
      <!-- Hero Content -->
      <div class="space-y-4 md:space-y-6">
        <h1 class="text-4xl font-bold text-white md:text-5xl lg:text-6xl">
          Transform Your Space with Professional Interior Painting
        </h1>
        <p class="text-lg text-white/90 md:text-xl">
          Expert painters delivering exceptional results for your home or business
        </p>
      </div>

      <!-- CTA Button -->
      <div>
        <Button
          variant="primary"
          href="#contact"
          class="w-full bg-[#F77F00] px-4 py-3 text-lg md:w-auto md:px-6 md:py-4"
        >
          Contact Us Now
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ml-2 h-5 w-5 md:h-6 md:w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </Button>
      </div>

      <!-- Trusted Clients -->
      <div class="space-y-3 md:space-y-4">
        <p class="text-base text-white/90 md:text-lg">Trusted Top Client</p>
        <div class="flex items-center justify-center gap-8 md:gap-12 lg:justify-start">
          <i class="fa-solid fa-building text-xl text-white/80 md:text-2xl lg:text-3xl"></i>
          <i class="fa-solid fa-chart-pie text-xl text-white/80 md:text-2xl lg:text-3xl"></i>
          <i class="fa-solid fa-briefcase text-xl text-white/80 md:text-2xl lg:text-3xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Section -->
  <div class="w-full lg:w-1/2">
    <img
      src="https://images.unsplash.com/photo-1562259949-e8e7689d7828?auto=format&fit=crop&q=80"
      alt="Professional painter working on interior wall"
      class="h-full w-full rounded-[16.24px] object-cover"
    />
  </div>
</div>
