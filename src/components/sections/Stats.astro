<section class="py-8 sm:py-12 md:py-16 lg:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Industry Awards -->
      <div class="bg-primary-600 rounded-2xl p-6 flex flex-col">
        <div
          class="bg-white/20 w-[73px] h-[73px] rounded-2xl p-2 flex items-center justify-center mb-5"
        >
          <i class="fa-solid fa-trophy text-4xl text-white"></i>
        </div>
        <div class="flex flex-col gap-1">
          <div class="text-5xl font-bold text-white">25+</div>
          <div class="text-lg text-white">Industry Awards</div>
        </div>
      </div>

      <!-- Satisfaction Rate -->
      <div class="bg-primary-600 rounded-2xl p-6 flex flex-col">
        <div
          class="bg-white/20 w-[73px] h-[73px] rounded-2xl p-2 flex items-center justify-center mb-5"
        >
          <i class="fa-solid fa-thumbs-up text-4xl text-white"></i>
        </div>
        <div class="flex flex-col gap-1">
          <div class="text-5xl font-bold text-white">98%</div>
          <div class="text-lg text-white/95">Satisfaction Rate</div>
        </div>
      </div>

      <!-- Projects Completed -->
      <div class="bg-primary-600 rounded-2xl p-6 flex flex-col">
        <div
          class="bg-white/20 w-[73px] h-[73px] rounded-2xl p-2 flex items-center justify-center mb-5"
        >
          <i class="fa-solid fa-circle-check text-4xl text-white"></i>
        </div>
        <div class="flex flex-col gap-1">
          <div class="text-5xl font-bold text-white">500+</div>
          <div class="text-lg text-white">Projects Completed</div>
        </div>
      </div>

      <!-- Years of Experience -->
      <div class="bg-primary-600 rounded-2xl p-6 flex flex-col">
        <div
          class="bg-white/20 w-[73px] h-[73px] rounded-2xl p-2 flex items-center justify-center mb-5"
        >
          <i class="fa-solid fa-calendar-check text-4xl text-white"></i>
        </div>
        <div class="flex flex-col gap-1">
          <div class="text-5xl font-bold text-white">10+</div>
          <div class="text-lg text-white">Years of Experience</div>
        </div>
      </div>
    </div>
  </div>
</section>
