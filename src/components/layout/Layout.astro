---
interface Props {
  title: string;
  description?: string;
}

import Footer from './Footer.astro';
import BackToTop from '../ui/BackToTop.astro';
import HeadAssets from './HeadAssets.astro';

const {
  title,
  description = 'Expert interior painting services transforming homes and businesses. Residential and commercial painting, color consultation, and professional finish. Serving [Your City/Region] with quality and precision.',
} = Astro.props;

// Hero image URL for preloading
const heroImageUrl = 'https://images.unsplash.com/photo-1562259949-e8e7689d7828?auto=format&fit=crop&q=85&w=1200&h=800';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#F77F00" />
    
    <!-- Preload critical hero image -->
    <link
      rel="preload"
      as="image"
      href={heroImageUrl}
      type="image/avif"
      fetchpriority="high"
    />
    
    <HeadAssets />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <slot />
    <Footer />
    <BackToTop />
  </body>
</html>
